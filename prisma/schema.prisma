generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventRequestStatus {
  ACCEPTED
  DECLINED
  PENDING
}

enum UserStatus {
  PENDING
  ACTIVE
}

enum UserRole {
  ADMIN
  SUPER_ADMIN
  CUSTOMER
}

enum Genders {
  MALE
  FEMALE
}

enum EventType {
  WEDDING
  XV
  ANOTHER
}

enum TableType {
  ROUND
  RECTANGULAR
  SQUARE
}

model EventRequest {
  id          String             @id @default(uuid())
  email       String             @unique
  tel         String             @unique
  status      EventRequestStatus @default(PENDING)
  description String
  deletedAt   DateTime?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  tel       String     @unique
  status    UserStatus @default(ACTIVE)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  deletedAt DateTime?
  role      UserRole
  requestId String     @default(uuid())
}

model Profile {
  id        Int     @id
  fristName String
  lastName  String
  country   String
  city      String
  gender    Genders
  age       Int
  userId    String  @default(uuid())
}

model Event {
  id             Int       @id
  guestsQuantity Int
  eventType      EventType
  eventName      String
  eventDate      DateTime  @unique
  startTime      DateTime
  endTime        DateTime
  tableType      TableType
  children       Boolean
  alcohol        Boolean
  userId         String    @default(uuid())
}
